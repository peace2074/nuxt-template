generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Category {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
}

model Likes {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  postId String @unique @db.ObjectId
  userId String @unique @db.ObjectId
}

model MediaFile {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt        DateTime @db.Date
  providerPublicId String
  tweetId          String   @db.ObjectId
  updatedAt        DateTime @db.Date
  url              String
  userId           String   @db.ObjectId
}

model Permissions {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  action     String
  conditions String[]
  fields     String[]
  inverted   Boolean
  subject    String
}

model Post {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}

model Profile {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @unique @db.ObjectId
}

model Roles {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String @unique
  permissions String @db.ObjectId
}

model Subscription {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  /// Field referred in an index, but found no data to define the type.
  keys_auth Json?  @unique
}

model Tweet {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  authorId  String   @db.ObjectId
  createdAt DateTime @db.Date
  replyToId String?  @db.ObjectId
  text      String
  updatedAt DateTime @db.Date
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  first_name   String
  last_name    String
  name         String
  password     String
  profileImage String
  role         String
  updatedAt    DateTime
  username     String   @unique
}
